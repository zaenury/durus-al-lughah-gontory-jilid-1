<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.unida.zheezhee.tamrinlughohgontory.Kalimat7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="الْأَمْثِلَةُ"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textkosong0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text0"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_below="@+id/textkosong0"
            android:layout_alignParentRight="true"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_below="@+id/text1"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_below="@+id/text3"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_below="@+id/text5"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_below="@+id/text7"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button7menuawal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text9"
            android:layout_marginTop="30dp"
            android:text="PERCAKAPAN" />
    </RelativeLayout>
</ScrollView>