<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.unida.zheezhee.tamrinlughohgontory.Percakapan6">

        <TextView
            android:layout_below="@+id/text1"
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="الْمُحَادَثَةُ"
            android:textColor="#000"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_below="@+id/text2"
            android:id="@+id/textkosong0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="24dp"/>

        <TextView
            android:layout_below="@+id/textkosong0"
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:text="هَلْ لَكَ قَلَمُ حِبْرٍ؟ نَعَمْ, لِيْ قَلَمُ حِبْرٍ"
            android:textColor="#000"
            android:textSize="23dp"/>

        <TextView
            android:layout_below="@+id/text10"
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:text="أَيْنَ قَلَمُ حِبْرٍ؟ هُوَ فِي الْجَيْبِ"
            android:textColor="#000"
            android:textSize="23dp"/>

        <TextView
            android:layout_below="@+id/text11"
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="مَنْ ذٰلِكَ الْوَلَدُ؟ هُوَ أَحْمَدُ"
            android:textColor="#000"
            android:textSize="23dp"/>

        <TextView
            android:layout_below="@+id/text12"
            android:id="@+id/text13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_below="@+id/text13"
            android:id="@+id/text131"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="هَلْ لِأَحْمَدَ قَلَمٌ؟ نَعَمْ, لَهُ قَلَمٌ عَلَى الْمَكْتَبِ"
            android:textColor="#000"
            android:textSize="20dp"/>

        <TextView
            android:layout_below="@+id/text131"
            android:id="@+id/text14"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="أَهٰذِهِ الْمِنْقَلَةُ لَكَ؟ لَا, تِلْكَ الْمِنْقَلَةُ لِأَحْمَدَ"
            android:textColor="#000"
            android:textSize="20dp"/>

        <TextView
            android:layout_below="@+id/text14"
            android:id="@+id/text15"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="هَلْ لِلْبَيْتِ مَطْبَخٌ؟ نَعَمْ, لَهُ مَطْبَخٌ"
            android:textColor="#000"
            android:textSize="20dp"/>

        <TextView
            android:layout_below="@+id/text15"
            android:id="@+id/text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_below="@+id/text16"
            android:id="@+id/text17"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="مَاذَا لِلشَّجَرَةِ؟ لَهَا وَرَقٌ وَثَمَرٌ"
            android:textColor="#000"
            android:textSize="23dp"/>

        <TextView
            android:layout_below="@+id/text17"
            android:id="@+id/text18"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="أَيْنَ السُّوْرُ؟ هُوَ فِي الْبُسْتَانِ"
            android:textColor="#000"
            android:textSize="23dp"/>

        <TextView
            android:layout_below="@+id/text18"
            android:id="@+id/text19"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:text="هَلِ الْحَصِيْرُ لِمُحَمَّدٍ؟ نَعَمْ, هُوَ لَهُ"
            android:textColor="#000"
            android:textSize="23dp"/>

        <TextView
            android:layout_below="@+id/text19"
            android:id="@+id/text20"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:text="مَاذَا لِلْبَابِ؟ لِلْبَابِ فَاكُوْرَةٌ"
            android:textColor="#000"
            android:textSize="23dp"/>
        <Button
            android:id="@+id/button1menuawal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/text20"
            android:text="MENU AWAL" />
    </RelativeLayout>
</ScrollView>