<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.unida.zheezhee.tamrinlughohgontory.Percakapan12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:text="الْمُحَادَثَةُ"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textkosong0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_below="@+id/textkosong0"
            android:layout_alignParentRight="true"
            android:text="هَلْ صَلَاةُ الصُّبْحِ فِي النَّهَارِ؟ لَا, لَيْسَتْ صَلَاةُ الصُّبْحِ فِي النَّهَارِ"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@+id/text10"
            android:layout_alignParentRight="true"
            android:text="هَلِ النَّارَجِيْلُ فِي قَرْيَتِكَ؟ نَعَمْ, هُوَ فِيْهَا"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text131"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/text12"
            android:layout_alignParentRight="true"
            android:text="كَمْ نَجْمًا فِي السَّمَاءِ؟ فِي السَّمَاءِ نُجُوْمٌ كَثِيْرَةٌ"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text15"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@+id/text131"
            android:layout_alignParentRight="true"
            android:text="كَمْ وَلَدًا فِي الْمَيْدَانِ؟ فيْهِ عِشْرُوْنَ وَلَدًا"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text17"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_below="@+id/text15"
            android:layout_alignParentRight="true"
            android:text="كَمْ زِرًّا لَكَ ؟ لِيْ ثَلَاثَةُ أَزْرَارٍ"
            android:textColor="#000"
            android:textSize="23dp" />

        <Button
            android:id="@+id/button1menuawal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text17"
            android:layout_marginTop="30dp"
            android:text="MENU AWAL" />
    </RelativeLayout>
</ScrollView>