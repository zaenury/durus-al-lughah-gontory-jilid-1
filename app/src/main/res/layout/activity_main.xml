<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.unida.zheezhee.tamrinlughohgontory.MainActivity">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="دُرُوْسُ اللُّغَةِ العَرَبِيَّةِ"
            android:textColor="#000"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/kosong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/pelajaran1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kosong"
            android:text="PELAJARAN KE 1" />

        <Button
            android:id="@+id/pelajaran2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran1"
            android:text="PELAJARAN KE 2" />

        <Button
            android:id="@+id/pelajaran3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran2"
            android:text="PELAJARAN KE 3" />

        <Button
            android:id="@+id/pelajaran4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran3"
            android:text="PELAJARAN KE 4" />

        <Button
            android:id="@+id/pelajaran5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran4"
            android:text="PELAJARAN KE 5" />

        <Button
            android:id="@+id/pelajaran6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran5"
            android:text="PELAJARAN KE 6" />

        <Button
            android:id="@+id/pelajaran7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran6"
            android:text="PELAJARAN KE 7" />

        <Button
            android:id="@+id/pelajaran8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran7"
            android:text="PELAJARAN KE 8" />

        <Button
            android:id="@+id/pelajaran9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran8"
            android:text="PELAJARAN KE 9" />

        <Button
            android:id="@+id/pelajaran10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran9"
            android:text="PELAJARAN KE 10" />

        <Button
            android:id="@+id/pelajaran11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran10"
            android:text="PELAJARAN KE 11" />

        <Button
            android:id="@+id/pelajaran12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran11"
            android:text="PELAJARAN KE 12" />

        <Button
            android:id="@+id/latihan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pelajaran12"
            android:text="LATIHAN" />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/latihan"
            android:onClick="clickExit"
            android:text="KELUAR" />
    </RelativeLayout>
</ScrollView>