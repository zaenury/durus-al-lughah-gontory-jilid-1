<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.unida.zheezhee.tamrinlughohgontory.Kalimat6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:text="الْأَمْثِلَةُ"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textkosong0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_below="@+id/textkosong0"
            android:layout_alignParentRight="true"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text3"
            android:layout_alignParentRight="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text4"
            android:layout_alignParentRight="true"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/textkosong"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text5"
            android:layout_alignParentRight="true"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/textkosong"
            android:layout_alignParentRight="true"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_below="@+id/text6"
            android:layout_alignParentRight="true"
            android:textSize="23dp" />

        <Button
            android:id="@+id/button6menuawal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_marginTop="50dp"
            android:text="PERCAKAPAN" />
    </RelativeLayout>
</ScrollView>