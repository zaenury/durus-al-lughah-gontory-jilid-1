<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.unida.zheezhee.tamrinlughohgontory.Percakapan8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="الْمُحَادَثَةُ"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textkosong0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#000"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/textkosong0"
            android:layout_alignParentRight="true"
            android:text="كَمْ قَلَمًا لَكَ؟ لِيْ قَلَمٌ وَاحِدٌ"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text3"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text="كَمْ قَلَمًا لِصَاحِبِكَ؟ لَهُ قَلَمَانِ"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text4"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text="كَمْ قَلَمًا لَكَ؟ لِيْ ثَلَاثَةُ أَقْلَامٍ"
            android:textColor="#000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text5bawah"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text5"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:layout_marginTop="30dp"
            android:text="كَمْ وَلَدًا بِجَانِبِكَ؟ بِجَانِبِيْ ثَلَاثَةُ أَوْلَادٍ"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text5bawah"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text="مَاذَا فِي الْخِزَانَةِ؟ فِيْهَا أَكْوَابٌ"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text6"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text="كَمْ كُوْبًا فِي الْخِزَانَةِ؟ فِيْهَا عَشَرَةُ أَكْوَابٍ"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text=""
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text8"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text="كَمْ ثَوْبًا لَكَ؟ لِيْ عَشَرَةُ أَثْوَابٍ"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/text9"
            android:layout_alignEnd="@+id/textkosong0"
            android:layout_alignRight="@+id/textkosong0"
            android:text="كَمْ بَابًا فِي مَنْزِلِكِ؟ فِيْ مَنْزِلِيْ خَمْسَةُ أَبْوَابٍ"
            android:textColor="#000"
            android:textSize="20dp" />


        <Button
            android:id="@+id/button1menuawal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text10"
            android:layout_marginTop="30dp"
            android:text="MENU AWAL" />
    </RelativeLayout>
</ScrollView>